@model IEnumerable<CamiFarma_I.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Inventario de Productos</h2>

    <a asp-action="Crear" class="btn btn-success mb-3">Agregar Producto</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio (S/)</th>
                <th>Stock</th>
                <th>Fecha Expiración</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio</td>
                    <td>@producto.Stock</td>
                    <td>@producto.FechaExpiracion.ToShortDateString()</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@producto.Id" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@producto.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
