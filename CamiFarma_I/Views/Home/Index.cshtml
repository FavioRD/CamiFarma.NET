@{
    ViewData["Title"] = "Página Principal";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4 mb-4">Bienvenido a la CamiFarma</h1>
        <p class="lead">Gestiona tus productos y consulta el inventario fácilmente.</p>
    </div>

    <div class="row justify-content-center mt-5">
        <!-- Card para Productos -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">Productos</h5>
                    <p class="card-text">Consulta, agrega o edita los productos disponibles en la farmacia.</p>
                    <a href="@Url.Action("Index", "Producto")" class="btn btn-primary">
                        Ver Lista de Productos
                    </a>
                </div>
            </div>
        </div>

        <!-- Card para otra funcionalidad futura -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">Reportes</h5>
                    <p class="card-text">Genera reportes de stock (próximamente).</p>
                    <a href="#" class="btn btn-secondary disabled">
                        Ver Reportes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
